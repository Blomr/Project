<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/listItemUpLeft"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/listItemDownLeft"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/listItemUpLeft"
        android:layout_alignLeft="@id/listItemUpLeft"
        android:layout_alignStart="@id/listItemUpLeft"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/listItemUpRight"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/listItemDownRight"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/listItemUpRight"
        android:layout_alignRight="@id/listItemUpRight"
        android:layout_alignEnd="@id/listItemUpRight"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

</RelativeLayout>